{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "starting point for smart contract development",
  "main": "truffle-config.js",
  "scripts": {
    "coverage": "./node_modules/.bin/solidity-coverage",
    "cov": ".\\node_modules\\.bin\\solidity-coverage",
    "pretty": "prettier --write --single-quote --tab-width 2 \"**/*.js\"",
    "precommit": "lint-staged && solhint \"contracts/*.sol\""
  },
  "lint-staged": {
    "**/*.{js,json}": [
      "prettier --single-quote --write --tab-width 2",
      "git add"
    ]
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-bignumber": "^2.0.2",
    "ethereumjs-abi": "^0.6.5",
    "ethereumjs-wallet": "^0.6.2",
    "ganache-cli": "^6.1.6",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "lint-staged": "^7.2.2",
    "openzeppelin-solidity": "^1.12.0",
    "prettier": "^1.14.2",
    "solhint": "^1.2.1",
    "solidity-coverage": "^0.5.5",
    "truffle": "^4.1.13"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/-/-.git"
  },
  "contributors": [
    "Mudit Gupta"
  ],
  "license": "GPL-3.0-or-later",
  "homepage": "https://mudit.blog"
}
